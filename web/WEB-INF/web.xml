<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Connexion</servlet-name>
        <servlet-class>com.controller.Connexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Produits</servlet-name>
        <servlet-class>com.controller.Produits</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Panier</servlet-name>
        <servlet-class>com.controller.Panier</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Quitter</servlet-name>
        <servlet-class>com.controller.Quitter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>forme</servlet-name>
        <servlet-class>com.controller.forme</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProduit</servlet-name>
        <servlet-class>com.controller.AddProduit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifierProduit</servlet-name>
        <servlet-class>com.controller.ModifierProduit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Commander</servlet-name>
        <servlet-class>com.controller.Commander</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Confirmer</servlet-name>
        <servlet-class>com.controller.Confirmer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Connexion</servlet-name>
        <url-pattern>/connexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Produits</servlet-name>
        <url-pattern>/produits</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Panier</servlet-name>
        <url-pattern>/panier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Quitter</servlet-name>
        <url-pattern>/quitter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>forme</servlet-name>
        <url-pattern>/forme</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProduit</servlet-name>
        <url-pattern>/addProduit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifierProduit</servlet-name>
        <url-pattern>/modifierProduit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Commander</servlet-name>
        <url-pattern>/commander</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Confirmer</servlet-name>
        <url-pattern>/confirmer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
